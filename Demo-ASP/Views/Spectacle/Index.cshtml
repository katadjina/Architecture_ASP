@model IEnumerable<SpectacleListItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (TempData.ContainsKey("Error")) { 
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.idSpectacle }) |
                @Html.ActionLink("Details", "Details", new { id=item.idSpectacle }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.idSpectacle })
            </td>
        </tr>
}
    </tbody>
</table>
